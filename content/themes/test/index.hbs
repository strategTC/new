{{!< default}}
<div class="row">
<div class="grid">
	<div class="grid-sizer"></div>
	{{#foreach posts}}
	<div class="grid-item">
		<article role="article" itemscope itemtype="http://schema.org/Article">
			<header>
				<h3 itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h3>
				<time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">
					{{date format='dddd DD MMM YYYY'}}
				</time>
			</header>
			<div itemprop="articleBody">
				{{content words="50"}}
			</div>
			<a class="btn btn-default" href="{{url}}" role="button">Read More</a>
			{{#if tags}}
			<div>
				Tags: {{tags separator=" | "}}
			</div>
			{{/if}}
		</article>
	</div>
	{{/foreach}}
	</div>
</div>
	{{#if pagination}}
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
			{{{pagination}}}
		</div>
	</div>
{{/if}}
{{> footer}}